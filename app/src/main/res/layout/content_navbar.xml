<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/back"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context=".Navbar"
    tools:showIn="@layout/app_bar_navbar">
    <LinearLayout
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/designupper"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
    </LinearLayout>

    <SearchView
        android:id="@+id/simpleSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:iconifiedByDefault="false"
        android:queryHint="Search here"
        tools:ignore="MissingConstraints" />



    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upper"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Choose Category"
        android:textSize="30dp"
        android:fontFamily="sans-serif-black"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-2dp"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choose"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            card_view:cardMaxElevation="10dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:contentPadding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:src="@drawable/categoryfirst" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Matrimony"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/realestate"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choose"
            android:layout_centerVertical="true"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            card_view:cardMaxElevation="10dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:contentPadding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:src="@drawable/categorysecond" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Real Estate"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_two"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose"
                android:layout_centerVertical="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                card_view:cardMaxElevation="10dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/categoryfive" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Makeup and artist"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose"
                android:layout_centerVertical="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                card_view:cardMaxElevation="10dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/categoryfour" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="jewelery"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@+id/choose"
                android:layout_centerVertical="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                card_view:cardMaxElevation="10dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/categorysix" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Hotel and resort"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose"
                android:layout_centerVertical="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                card_view:cardElevation="8dp"
                card_view:cardMaxElevation="10dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:contentPadding="10dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:src="@drawable/categorythree" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="fashion"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose"
                android:layout_centerVertical="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                card_view:cardMaxElevation="10dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:src="@drawable/categorysev" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="caterer"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                card_view:cardMaxElevation="10dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cateegt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="banquet"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />
</RelativeLayout>


